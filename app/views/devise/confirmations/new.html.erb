<div class="w-full flex flex-col justify-start items-center">
    <div class="md:w-1/2 flex justify-center items-center py-10 bg-white">
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), class: "bg-white") do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <h1 class="text-gray-800 text-2xl font-bold mb-3">Resend confirmation instructions</h1>
            
            <div class="flex items-center border-2 rounded-2xl py-2 px-3 mb-4">
              <%= icon('fa-solid', 'at', class: "text-white-300") %>
              <%= f.email_field :email, class: "pl-2 outline-none border-none border-transparent focus:outline-none focus:border-transparent focus:ring-0", placeholder: "Email Address", autocomplete: "email", autofocus: true, value: (resource.pending_reconfirmation? ? rresource.unconfirmed_email : resource.email)%>
            </div>
            
            <%= f.submit "Resend", class: "block w-full bg-amaranth-500 hover:bg-amaranth-700 rounded-2xl py-2 font-semibold text-white-50 cursor-pointer mt-4 mb-2" %>
            
            <div class="mt-4">
              <%= render "devise/shared/links" %>
            </div>
        <% end %>
    </div>
</div>
