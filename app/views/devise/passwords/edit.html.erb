<div class="w-full flex flex-col justify-start items-center">
    <div class="md:w-1/2 flex justify-center items-center py-10 bg-white">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}, class: "bg-white") do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <%= f.hidden_field :reset_password_token %>

            <h1 class="text-gray-800 text-2xl font-bold mb-3">Change Your Password</h1>
            
            <% if @minimum_password_length %>
                <em class="text-sm text-gray-400"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
            <div class="flex items-center rounded-2xl px-3 py-2 border-2 mb-4">
              <%= icon('fa-solid', 'lock', class: "text-white-300") %>
              <%= f.password_field :password, class: "pl-2 outline-none border-none border-transparent focus: outline-none focus:border-transparent focus:ring-0", placeholder: "New Password", autocomplete: "new-password", autofocus: true %>
            </div>

            <div class="flex items-center rounded-2xl px-3 py-2 border-2 mb-4">
              <%= icon('fa-solid', 'lock', class: "text-white-300") %>
              <%= f.password_field :password_confirmation, class: "pl-2 outline-none border-none border-transparent focus: outline-none focus:border-transparent focus:ring-0", placeholder: "Confirm New Password", autocomplete: "new-password" %>
            </div>

            <%= f.submit "Reset Password", class: "block w-full bg-amaranth-500 hover:bg-amaranth-700 rounded-2xl py-2 font-semibold text-white-50 cursor-pointer mt-4 mb-2" %>
            
            <div class="mt-4">
              <%= render "devise/shared/links" %>
            </div>
        <% end %>
    </div>
</div>